rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading a "health" document for connectivity checks
    match /health/{doc} {
      allow read: if true;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /trips/{tripId} {
      allow create: if request.auth.uid == request.resource.data.ownerId || request.auth.uid in request.resource.data.collaborators;
      // User can read, update, or delete a trip if their UID is in the existing document's collaborators list.
      allow read, update, delete: if request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.collaborators;

      match /photos/{photoId} {
        allow read: if request.auth.uid == get(/databases/$(database)/documents/trips/$(tripId)).data.ownerId || request.auth.uid in get(/databases/$(database)/documents/trips/$(tripId)).data.collaborators;
        allow create, delete: if request.auth.uid == get(/databases/$(database)/documents/trips/$(tripId)).data.ownerId || request.auth.uid in get(/databases/$(database)/documents/trips/$(tripId)).data.collaborators;
      }
    }
  }
}
