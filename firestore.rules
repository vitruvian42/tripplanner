rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{tripId} {
      // A user can create a trip if they are the owner
      allow create: if request.resource.data.ownerId == request.auth.uid;
      
      // A user can read, update, or delete a trip if they are the owner
      allow read, update, delete: if resource.data.ownerId == request.auth.uid;
    }
  }
}
