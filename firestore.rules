rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{tripId} {
      // Users can create a trip if their UID is in the collaborators list of the new document.
      allow create: if request.auth.uid in request.resource.data.collaborators;
      
      // Users can read, update, or delete a trip if their UID is in the collaborators list of the existing document.
      allow read, update, delete: if request.auth.uid in resource.data.collaborators;
    }
  }
}
