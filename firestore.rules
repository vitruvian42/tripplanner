rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read & write their own trip documents.
    // This rule allows a user to query the 'trips' collection
    // as long as the query includes a "where('ownerId', '==', request.auth.uid)" clause.
    match /trips/{tripId} {
      allow read, create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }
  }
}
