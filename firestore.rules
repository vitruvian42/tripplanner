rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{tripId} {
      // A user can read/write a trip if their UID is in the collaborators array.
      // This applies to reads, writes, updates, and deletes.
      // For 'create', it checks the incoming document data.
      // For 'read', 'update', 'delete', it checks the existing document data.
      allow read, write: if request.auth.uid in request.resource.data.collaborators || request.auth.uid in resource.data.collaborators;
    }
  }
}
