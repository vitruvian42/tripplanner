rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{tripId} {
      // User can create a trip if their UID is in the new document's collaborators list.
      allow create: if request.auth.uid in request.resource.data.collaborators;
      // User can read, update, or delete a trip if their UID is in the existing document's collaborators list.
      allow read, update, delete: if request.auth.uid in resource.data.collaborators;
    }
  }
}
